{
  "name": "sns_event_system",
  "version": "0.0.1",
  "description": "Manage SNS events and members across multiple platforms",
  "engines": {
    "node": ">=14.15.0"
  },
  "scripts": {
    "lint": "npm run client:lint && npm run api:lint",
    "build:docker": "tsc -p api --outDir api/dist && docker build -t codeseoul/event_member_management:latest .",
    "start:dockerLocal": "docker-compose up -d",
    "start:database": "docker-compose up -d database",
    "stop:dockerAll": "docker-compose down",
    "client:startDocker": "webpack serve --host 0.0.0.0 --config client/webpack.config.js",
    "client:startDev": "webpack serve --host 0.0.0.0 --open --config client/webpack.config.js",
    "client:build": "webpack build --config client/webpack.config.js",
    "client:test": "jest --rootDir client",
    "client:lint": "eslint -c client/.eslintrc.js --ext .ts client/ && prettier --write .",
    "api:start": "tsc -p api --outDir api/dist && node api/dist/index.js",
    "api:start:dev": "ts-node --dir api ../node_modules/typeorm/cli.js migration:run && nodemon -L --config api/nodemon.json",
    "api:test": "jest --rootDir api --config api/jest.config.js",
    "api:test:unit": "jest --rootDir api --config api/jest.config.unit.js unit",
    "api:test:integration": "jest --rootDir api --config api/jest.config.int.js int",
    "api:typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "api:lint": "eslint -c api/.eslintrc.js --ext .ts api/ && prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeSeoul/sns_event_api.git"
  },
  "author": "Bryan \"Beege\" Berry",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CodeSeoul/sns_event_api/issues"
  },
  "homepage": "https://github.com/CodeSeoul/sns_event_api#readme",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@shopify/jest-koa-mocks": "^3.0.1",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.24",
    "@types/koa": "^2.11.6",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-joi-router": "^5.2.4",
    "@types/koa-joi-router-docs": "^1.0.0",
    "@types/koa-pino-logger": "^3.0.0",
    "@types/node": "^14.14.7",
    "@types/pino": "^6.3.3",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/eslint-plugin-tslint": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "axios": "^0.21.1",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsdoc": "^35.4.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.24.0",
    "html-webpack-plugin": "^4.5.1",
    "husky": "^4.3.6",
    "jest": "^27.0.6",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6",
    "prettier": "2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "style-loader": "^2.0.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "web-vitals": "^0.2.4",
    "webpack": "^5.45.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "workbox-webpack-plugin": "^6.1.0"
  },
  "dependencies": {
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-joi-router": "^6.0.2",
    "koa-joi-router-docs": "^1.2.1",
    "koa-pino-logger": "^3.0.0",
    "koa2-swagger-ui": "^5.2.0",
    "mysql2": "^2.2.5",
    "pino": "^6.12.0",
    "typeorm": "^0.2.34"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
